# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{bash,sh}]
indent_size = 4

[Dockerfile]
indent_size = 4

[*.go]
indent_style = tabs
indent_size = 4

[{*.just,*.justfile}]
indent_size = 4

[{Makefile,*.mk}]
indent_style = tab
indent_size = 4
